<section class="admin-sales-index">

  <header class="page-header">
    <h1>Admin &raquo; All Sales</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Sale', [:new, :admin, :sale], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default sales">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
          <th>Percent Off</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%#= render @sales %> 
 <!--We have commented out above approach here what we did 
  is used second approach below where we are looping through 
  each array kind of object loop through each do and have access to
       and we have access to each sale object and we are rendering
       each sale and we are rendering sale each time  -->
        <% @sales.each do |s| %>
          <%= render 'sale', sale: s %>
          <% end %>
      </tbody>
    </table>

  </div>

</section>