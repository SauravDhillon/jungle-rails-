<h1>Login</h1>

<%= form_tag '/login' do %>

  <% if flash[:error] %>
  <p class="error-message"><%= flash[:error] %></p>
<% end %>
  <div>
   <%= label_tag :email, "Email: " %>
   <%= text_field_tag :email %>
  </div>
  
  <div>
    <%= label_tag :password, "Password: " %>
    <%= password_field_tag :password %>
  </div>
  
  <%= submit_tag "Login" %>
<% end %>